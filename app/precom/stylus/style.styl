@import jeet
@import 'nib'

.link_modal
	a
		cursor pointer
		
#modal	
	width 470px
	padding 15px
	.content
		h3.title
			text-align center
			font-size 20px
			font-weight bold
			margin-bottom 30px
			justify-content
			
		.content_group
			display flex
			align-items center
			justify-content space-between
			margin-bottom 20px
			
			.select_group
				.group
					padding 10px
					margin-top 15px
					display flex
					align-items flex-end
					label
						display block
						width 100px
						min-width 75px
						margin-right 15px
						text-align right
					select
						padding 5px
						width 170px
						option
							text-align center
							
			.btn
				width 200px
				div
					width 100px
					background-color green
					padding 7px 10px
					cursor pointer
					text-align center
					color white
					&.btn_update
						display none
						background-color green
					&.btn_loading
						display none
						background #606560
						cursor default
						
.content_list
	ul
		padding 0px
		li
			display flex
			padding 0px 5px 0px 1px
			div
				width 120px
				text-align left
				padding 10px 7px
				&.btn_edit , &.edit
					width 50px
					cursor pointer
					color green
				&.btn_remove, &.remove
					width 50px
					color red
					cursor pointer
				&.id
					display none
			&.active
				background papayawhip
				border-radius 4px
				border 1px dashed