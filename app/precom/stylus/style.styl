@import jeet
@import 'nib'

.link_modal
	a
		cursor pointer
		
#modal	
	width 470px
	padding 2% 5%
	
	.content
		h3.title
			text-align center
			font-size 20px
			font-weight bold
			margin-bottom 30px
			justify-content
			
		.content_group
			display flex
			align-items center
			justify-content space-between
			margin-bottom 20px
			
			.select_group
				.group
					padding 10px
					margin-top 15px
					display flex
					align-items flex-end
					label
						display block
						width 100px
						min-width 75px
						margin-right 15px
						text-align right
					select
						padding 5px
						width 170px
						option
							text-align center
							
			.btn
				width 200px
				.btn_add
					width 100px
					background-color green
					padding 7px 10px
					cursor pointer
					text-align center
					color white
					
		.list_add
			ul
				li
					display flex
					div
						width 120px
						text-align left
						padding 10px 7px
						&.edit
							width 50px
							cursor pointer
							color green
							background 
						&.remove
							width 50px
							color red
							cursor pointer
						&.id
							display none
					
					
